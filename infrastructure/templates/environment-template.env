# Election Platform Environment Configuration Template
# This template defines all required environment variables for the election platform

# ============================================================================
# CORE APPLICATION SETTINGS
# ============================================================================

# Application Environment (development, staging, production)
NODE_ENV=development

# Server Configuration
PORT=5000
HOST=0.0.0.0

# Application URLs
APP_ORIGIN=http://localhost:5000
BASE_URL=http://localhost:5000

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================

# Primary PostgreSQL Database (Neon Serverless)
DATABASE_URL=postgresql://username:password@host:5432/database_name

# Database Replica Connections (for read scaling)
DATABASE_REPLICA_1=postgresql://username:password@replica1:5432/database_name
DATABASE_REPLICA_2=postgresql://username:password@replica2:5432/database_name

# Neon API Configuration (for snapshots and management)
NEON_API_KEY=your_neon_api_key
NEON_PROJECT_ID=your_neon_project_id
NEON_BRANCH_ID=main

# ============================================================================
# AUTHENTICATION & SECURITY
# ============================================================================

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_here

# Session Configuration
SESSION_COOKIE_NAME=et.sid
SESSION_TTL_HOURS=720

# Encryption Keys
BACKUP_ENCRYPTION_KEY=your_backup_encryption_key

# ============================================================================
# EXTERNAL API INTEGRATIONS
# ============================================================================

# Google Civic Information API
GOOGLE_CIVIC_API_KEY=your_google_civic_api_key

# ProPublica Congress API
PROPUBLICA_API_KEY=your_propublica_api_key

# VoteSmart API
VOTESMART_API_KEY=your_votesmart_api_key
VOTESMART_API_URL=https://api.votesmart.org

# Perplexity AI API
PERPLEXITY_API_KEY=your_perplexity_api_key

# OpenAI API
OPENAI_API_KEY=your_openai_api_key

# Other Political Data APIs
OPENSTATES_API_KEY=your_openstates_api_key
CONGRESS_API_KEY=your_congress_api_key
OPENFEC_API_KEY=your_openfec_api_key
CENSUS_API_KEY=your_census_api_key

# Geographic Services
MAPQUEST_API_KEY=your_mapquest_api_key

# Web Scraping Services
FIRECRAWL_API_KEY=your_firecrawl_api_key

# ============================================================================
# NOTIFICATION SERVICES
# ============================================================================

# SendGrid Email Service
SENDGRID_API_KEY=your_sendgrid_api_key

# Twilio SMS Service
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=your_twilio_phone_number

# SMTP Configuration (alternative to SendGrid)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your_smtp_username
SMTP_PASS=your_smtp_password

# Alert Configuration
ALERT_EMAIL=admin@example.com
FAILOVER_WEBHOOK_URL=https://hooks.example.com/failover

# ============================================================================
# CLOUD STORAGE & BACKUP
# ============================================================================

# AWS S3 Configuration (for backups)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
S3_BACKUP_BUCKET=election-platform-backups

# ============================================================================
# REPLIT PLATFORM CONFIGURATION
# ============================================================================

# Replit Specific Settings
REPL_ID=your_repl_id
REPLIT_DOMAINS=your-repl.replit.dev,custom-domain.com

# ============================================================================
# FRONTEND CONFIGURATION
# ============================================================================

# Vite Frontend Environment Variables (prefixed with VITE_)
VITE_ADMIN_FEATURES=false
VITE_API_BASE_URL=http://localhost:5000

# ============================================================================
# DISASTER RECOVERY & BACKUP SETTINGS
# ============================================================================

# Backup Configuration
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
VALIDATION_FREQUENCY=weekly

# Secrets Rotation Configuration
SECRETS_ROTATION_ENABLED=true
SECRETS_ROTATION_SCHEDULE=0 3 * * 0
SECRETS_VALIDATION_ENABLED=true

# ============================================================================
# MONITORING & LOGGING
# ============================================================================

# Redis Cache (if used)
REDIS_URL=redis://localhost:6379

# Congress API Configuration
CONGRESS_NUMBER=119

# ============================================================================
# PLATFORM CONTINUITY SETTINGS
# ============================================================================

# Infrastructure as Code
IAC_ENABLED=true
IAC_AUTO_DEPLOY=false
IAC_ENVIRONMENT=development

# Artifact Management
ARTIFACT_STORAGE_ENABLED=true
ARTIFACT_RETENTION_DAYS=90
ARTIFACT_CLEANUP_SCHEDULE=0 4 * * 0

# Environment Bootstrapping
AUTO_BOOTSTRAP_ENABLED=true
BOOTSTRAP_TIMEOUT_MINUTES=30

# ============================================================================
# FEATURE FLAGS
# ============================================================================

# Admin Features
ADMIN_FEATURES=false

# Experimental Features
EXPERIMENTAL_FEATURES=false

# ============================================================================
# DEVELOPMENT ONLY SETTINGS
# ============================================================================

# Development Database Connection (local PostgreSQL)
# DEV_DATABASE_URL=postgresql://dev:dev@localhost:5432/election_dev

# Development API Keys (use test/sandbox keys)
# DEV_GOOGLE_CIVIC_API_KEY=your_dev_google_civic_key

# Debug Settings
DEBUG=false
VERBOSE_LOGGING=false