# ============================================
# ELECTION TRACKER - ENVIRONMENT CONFIGURATION
# ============================================
# Copy this file to .env and fill in your actual values
# NEVER commit the .env file to git

# ============================================
# DATABASE (REQUIRED)
# ============================================
# PostgreSQL connection string for Neon or other providers
# Format: postgresql://username:password@host:port/database?sslmode=require
DATABASE_URL=postgresql://user:password@host.neon.tech:5432/electiontracker

# ============================================
# ESSENTIAL APIs (REQUIRED FOR CORE FEATURES)
# ============================================

# Google Civic Information API
# Get key: https://console.cloud.google.com/apis/credentials
# Used for: Federal and state election data
GOOGLE_CIVIC_API_KEY=

# OpenFEC (Federal Election Commission)
# Get key: https://api.open.fec.gov/developers/
# Used for: Campaign finance data
OPENFEC_API_KEY=

# ProPublica Congress API
# Get key: https://www.propublica.org/datastore/api/propublica-congress-api
# Used for: Congressional voting records and bills
PROPUBLICA_API_KEY=

# ============================================
# IMPORTANT APIs (RECOMMENDED)
# ============================================

# US Census Bureau API
# Get key: https://api.census.gov/data/key_signup.html
# Used for: Demographic and district data
CENSUS_API_KEY=

# OpenStates API
# Get key: https://openstates.org/accounts/profile/
# Used for: State legislature data
OPENSTATES_API_KEY=

# Vote Smart API
# Get key: https://justfacts.votesmart.org/share/api
# Used for: Candidate voting records and ratings
VOTESMART_API_KEY=

# ============================================
# OPTIONAL ENHANCEMENT APIs
# ============================================

# MapQuest API
# Get key: https://developer.mapquest.com/
# Used for: Geocoding and location services
MAPQUEST_API_KEY=

# Perplexity AI API
# Get key: https://www.perplexity.ai/settings/api
# Used for: AI-powered fact checking and content validation
PERPLEXITY_API_KEY=

# Data.gov API (usually no key required, but some endpoints need it)
# Get key: https://api.data.gov/signup/
DATA_GOV_API_KEY=

# ============================================
# EXTERNAL SERVICES (OPTIONAL)
# ============================================

# Firecrawl Service
# Get key: https://firecrawl.dev/
# Used for: Web scraping official election websites
FIRECRAWL_API_KEY=

# SendGrid (Email notifications)
# Get key: https://app.sendgrid.com/settings/api_keys
SENDGRID_API_KEY=

# Twilio (SMS notifications)
# Get credentials: https://console.twilio.com/
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=

# ============================================
# AWS S3 (BACKUP STORAGE - OPTIONAL)
# ============================================
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
AWS_S3_BACKUP_BUCKET=

# ============================================
# AUTHENTICATION & SECURITY
# ============================================

# JWT Secret for authentication (generate a random 64-char string)
# Generate with: openssl rand -hex 32
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# Session Secret (generate a random string)
SESSION_SECRET=your-super-secret-session-key-change-this

# Cookie settings
COOKIE_SECURE=false  # Set to true in production with HTTPS
COOKIE_SAME_SITE=lax

# ============================================
# APPLICATION SETTINGS
# ============================================

# Node environment
NODE_ENV=development  # development, production, or test

# Application URL (for OAuth callbacks and links)
APP_URL=http://localhost:5000

# Replit domains (comma-separated, if deploying on Replit)
REPLIT_DOMAINS=

# ============================================
# FEATURE FLAGS
# ============================================

# Enable/disable features
ENABLE_CANDIDATE_PORTAL=true
ENABLE_LIVE_RESULTS=true
ENABLE_NOTIFICATIONS=false
ENABLE_RECOMMENDATIONS=true

# ============================================
# RATE LIMITING
# ============================================

# Rate limit settings (requests per 15 minutes)
RATE_LIMIT_BASIC=100
RATE_LIMIT_PREMIUM=1000
RATE_LIMIT_ENTERPRISE=10000

# ============================================
# LOGGING & MONITORING
# ============================================

# Log level: error, warn, info, debug
LOG_LEVEL=info

# Sentry DSN (error tracking - optional)
SENTRY_DSN=

# ============================================
# DEVELOPMENT ONLY
# ============================================

# Skip external API calls in development
SKIP_EXTERNAL_APIS=false

# Use mock data for testing
USE_MOCK_DATA=false

# Enable debug logging
DEBUG=false
